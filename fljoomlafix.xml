<?xml version="1.0" encoding="utf-8"?>
<extension version="3.7" type="plugin" group="system" method="upgrade">
	<name>[FL] Joomla Fix plugin</name>
	<author>Vitaliy Moskalyuk</author>
	<creationDate>July 2018</creationDate>
	<copyright>Copyright Â© 2018 Vitaliy Moskalyuk All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>info@2sweb.ru</authorEmail>
	<authorUrl>https://2sweb.ru</authorUrl>
	<version>0.9.0</version>
	<description>PLG_SYSTEM_FLJOOMLAFIX_XML_DESCRIPTION</description>
	
	<files>
		<filename plugin="fljoomlafix">fljoomlafix.php</filename>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>overrides</folder>
	</files>
	
	<languages>
		<language tag="en-GB">en-GB.plg_system_fljoomlafix.ini</language>
		<language tag="en-GB">en-GB.plg_system_fljoomlafix.sys.ini</language>
	</languages>
	
	<config>
		
		<field
			name="fljoomlafix"
			type="hidden"
			default="true"
		/>
	
		<fields name="params">
			
			<fieldset name="basic">
				
			</fieldset>
			
			<fieldset name="overrides" label="Overrides">
				
				<field
					name="overrides_enable"
					label="PLG_FLJOOMLAFIX_OVERRIDES_ENABLE"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="overrides_path"
					label="PLG_FLJOOMLAFIX_OVERRIDES_PATH"
					type="list"
					default="pligin"
				>
					<option value="pligin">PLG_FLJOOMLAFIX_PLIGIN_DIR</option>
					<option value="root">PLG_FLJOOMLAFIX_ROOT_DIR</option>
				</field>
				
			</fieldset>
			
			<fieldset name="assets" label="Assets">
			
			</fieldset>
			
		</fields>
		
	</config>
	
</extension>
